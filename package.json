{
	"name": "csv-explorer",
	"version": "0.2.3",
	"description": "Run SQL queries against CSV and XPT documents.",
	"main": "dist/app.js",
	"scripts": {
		"build:ts": "tsc",
		"build:css": "tailwindcss -i src/main.css -o dist/stylesheet.css",
		"build:bundle": "esbuild src/index.tsx --bundle --outfile=dist/app.js --target=es2022 --sourcemap",
		"build:workers": "esbuild src/workers/database.ts --bundle --outfile=dist/workers/database.js --target=es2022 --sourcemap --format=iife --platform=browser --external:fs --external:path --external:crypto",
		"cypress:open": "cypress open",
		"cypress:run": "cypress run",
		"lint": "prettier --check .",
		"style:fix": "prettier --write .",
		"test": "npm run cypress:run"
	},
	"author": "Albert Sadowski <asadowski@mailbox.org>",
	"license": "MIT",
	"dependencies": {
		"@dumpstate/ixdb-kv-store": "^0.3.0",
		"@dumpstate/web-worker-proxy": "^0.2.0",
		"@monaco-editor/react": "^4.7.0",
		"csv-parse": "^6.1.0",
		"csv-stringify": "^6.6.0",
		"jspreadsheet-ce": "^4.15.0",
		"prop-types": "^15.8.1",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"sql.js": "^1.8.0"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.18",
		"@types/node": "^25.2.1",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@types/sql.js": "^1.4.4",
		"cypress": "^13.15.0",
		"esbuild": "^0.27.2",
		"prettier": "^3.8.1",
		"serve": "^14.2.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"wait-on": "^7.0.1"
	}
}
